{
    "name": "oveleon/contao-component-style-manager",
    "type": "contao-bundle",
    "description": "Style and CSS-Class Manager for Contao Open Source CMS",
    "keywords": [
        "contao",
        "styles",
        "css",
        "manager"
    ],
    "homepage": "https://www.oveleon.de/stylemanager.html",
    "license": "MIT",
    "authors": [
        {
            "name": "Oveleon",
            "homepage": "https://oveleon.de/",
            "role": "Developer"
        },
        {
            "name": "Daniele Sciannimanica",
            "homepage": "https://github.com/doishub",
            "role": "Developer"
        },
        {
            "name": "Sebastian Zoglowek",
            "homepage": "https://github.com/zoglo",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oveleon/contao-component-style-manager/issues",
        "source": "https://github.com/oveleon/contao-component-style-manager",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-dom": "*",
        "contao/core-bundle": "5.3.* || ^5.6",
        "doctrine/dbal": "^3.7 || ^4.3",
        "psr/log": "^1.1 || 2.0 || ^3.0",
        "symfony/config": "^6.4 || ^7.3",
        "symfony/console": "^6.4 || ^7.3",
        "symfony/dependency-injection": "^6.4 || ^7.3",
        "symfony/event-dispatcher": "^6.4 || ^7.3",
        "symfony/event-dispatcher-contracts": "^3.0",
        "symfony/http-foundation": "^6.4 || ^7.3",
        "symfony/http-kernel": "^6.4 || ^7.3",
        "symfony/routing": "^6.4 || ^7.3",
        "symfony/translation-contracts": "^3.0",
        "twig/twig": "^3.21"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "suggest": {
        "contao-thememanager/core": "A lightweight forward-thinking CSS component-first-framework leveraging flexbox and custom properties"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Oveleon\\ContaoComponentStyleManager\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.x-dev"
        },
        "contao-manager-plugin": "Oveleon\\ContaoComponentStyleManager\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
